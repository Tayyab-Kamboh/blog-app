<!DOCTYPE html>
<html>
<head>
  <title><%= @user.name %></title>
  <link rel="stylesheet" href="/assets/users.css">
</head>
<body>
  <h1><%= @user.name %></h1>
  <% if @user.photo.present? %>
    <%= image_tag @user.photo %>
  <% else %>
    <p>No photo available</p>
  <% end %>
  <p><%= @user.bio %></p>
  <p>Number of posts: <%= @user.posts.count %></p>

  <% @user.posts.limit(3).each_with_index do |post, index| %>
    <div class="post-container">
      <h2>Post #<%= index + 1 %> by <%= post.author.name %></h2>
      <p><%= post.text %></p>
      <p>Comments: <%= post.comments.count %>, Likes: <%= post.likes.count %></p>

      <h3>Recent Comments:</h3>
      <ul class="comments-list">
        <% post.recent_comments.each do |comment| %>
          <li><span>Username: <%= comment.author.name %></span>, Comment: <%= comment.text %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% @user.posts.limit(3).each_with_index do |post, index| %>
    <div class="post-container">
      <h2>Post #<%= index + 1 %> by <%= post.author.name %></h2>
      <p><%= post.text %></p>
      <p>Comments: <%= post.comments.count %>, Likes: <%= post.likes.count %></p>
    </div>
  <% end %>

  <!-- "See All Posts" button linking to the user's posts index page -->
  <%= link_to "See All Posts", all_posts_user_path(@user), class: "see-all-posts-button" %>

</body>
</html>
